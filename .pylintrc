[MASTER]
ignore=CVS
persistent=yes
load-plugins=

[MESSAGES CONTROL]
disable=C0111,R0903,C0103,R0913,W0703,R0914,C0301,W0511,R0902,R0904,C0413,W0611,C0412,R0915,R0801

[FORMAT]
max-line-length=120
max-module-lines=2000
indent-string='    '

[BASIC]
good-names=i,j,k,ex,Run,_,id,df

[REPORTS]
output-format=text
files-output=no
reports=no
evaluation=10.0 - ((float(5 * error + warning + refactor + convention) / statement) * 10)